@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>查看课程信息</title>
    <link rel="stylesheet" href="~/Content/admin/style.default.css" type="text/css" />
    <script type="text/javascript" src="~/Scripts/Course/jquery-1.7.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Course/jquery-ui-1.8.16.custom.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Course/colorpicker.js"></script>
    <script type="text/javascript" src="~/Scripts/Course/elements.js"></script>
</head>

<body>
    <div style="height:50px;background-color:#31425D;text-align:center" align="Center">
        <h1 vertical-align="middle" style="line-height:45px ">查看课程信息</h1>
    </div><!--contenttitle-->

    <div class="widgetbox" style="text-align:center">
        <div class="widgetcontent padding0 statement">
            <table cellpadding="0" cellspacing="0" border="0" class="stdtable">
                <colgroup>
                    <col class="con0" style="width: 3%" />
                    <col class="con1" style="width: 10%" />
                </colgroup>
                <thead>
                    <tr>
                        <th class="head0" style="text-align:center">课程属性</th>
                        <th class="head1" style="text-align:center">课程信息</th>
                    </tr>
                </thead>

                <!--详细课程信息内容-->>
                <tbody  id="CourseInfo"> 
                    <tr>
                        <td>课程名称</td>
                        <td>@ViewData["courseName"]</td>
                    </tr>
                    <tr>
                        <td>课程学分</td>
                        <td>@ViewData["courseCredit"]</td>
                    </tr>
                    <tr>
                        <td>课程学时</td>
                        <td>@ViewData["courseHour"]</td>
                    </tr>
                    <tr>
                        <td>课程类型</td>
                        <td>@ViewData["courseType"]</td>
                    </tr>
                    <tr>
                        <td>理论课时</td>
                        <td>@ViewData["courseTheory"]</td>
                    </tr>
                    <tr>
                        <td>实验课时</td>
                        <td>@ViewData["courseExperiment"]</td>
                    </tr>
                    <tr>
                        <td>开课时间</td>
                        <td>@ViewData["courseOpentime"]</td>
                    </tr>
                    <tr>
                        <td>先行课程</td>
                        <td>@ViewData["coursePrior"]</td>
                    </tr>
                    <tr>
                        <td>课程状态</td>
                        <td>@ViewData["status"]</td>
                    </tr>
                    <tr>
                        <td>所属学院</td>
                        <td>@ViewData["collegeID"]</td>
                    </tr>
                 
                </tbody>
            </table>
        </div><!--widgetcontent-->
    </div><!--widgetbox-->
    <br />

    <!--静态添加教师和班级的信息-->
    <div class="one_third last">
        <ul id="sortable2" class="sortlist">
            <li>
                <div class="label">
                    <span class="moveicon"></span>
                    <span class="arrowdrop"></span>
                    授课教师
                </div><!--label-->
                <div class="details">
                    <p>曾诚</p>
                    <p>赵明俊</p>
                </div><!--details-->

            </li>
            <li>
                <div class="label">
                    <span class="moveicon"></span>
                    <span class="arrowdrop"></span>
                    授课班级
                </div><!--label-->
                <div class="details">
                    <p>软件工程1502</p>
                    <p>软件工程1501</p>
                    <p>软件工程产业班1501</p>
                    <p>信息安全1501</p>
                </div><!--details-->
            </li>
        </ul>
    </div>
</body>
</html>






