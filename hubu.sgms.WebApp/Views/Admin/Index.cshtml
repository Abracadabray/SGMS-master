        <div class="layui-body">
            <!-- 内容主体区域 -->
            <div class='info'>
                <div class="z_content">
                    <!--发布新闻公告-->
                    <form action="" class="z_myform form-horizontal">
                        <div class="form-group">
                            <label for="" class='col-sm-2 control-label '>标题:</label>
                            <div class="col-sm-9">
                                <input type="text" class='form-control Username' placeholder='请输入新闻标体'>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class='col-sm-2 control-label '>关键字:</label>
                            <div class="col-sm-3">
                                <input type="text" class='form-control' placeholder='关键字一'>
                            </div>
                            <div class="col-sm-3">
                                <input type="text" class='form-control' placeholder='关键字二'>
                            </div>
                            <div class="col-sm-3">
                                <input type="text" class='form-control' placeholder='关键字三'>
                            </div>
                        </div>
                        <p><textarea id="tid" rows="15"></textarea></p>
                        <p style="padding-top: 20px;margin-left: 45%;">
                            <button class="layui-btn layui-btn-normal" lay-submit="" lay-filter="demo1" style="width: 120px;">发布     </button>
                        </p>
                    </form>
                </div>
                <div class="z_content">
                    <!--修改个人信息-->
                    <div class="container">
                        <form id="defaultForm" class="form-horizontal" action="">
                            <div class="form-group">
                                <label class="col-lg-3 control-label">用户名</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" name="username" placeholder="用户名" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">身份证号</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" name="IDCard" placeholder="身份证号" />
                                </div>
                            </div>
                            <!--级联菜单城市选择-->
                            <div class="form-group">
                                <label for="" class='col-lg-3 control-label'>联系地址:</label>
                                <div class="col-lg-2">
                                    <select name="user.province" id="province" class="form-control"></select>
                                </div>
                                <div class="col-lg-2">
                                    <select name="user.city" id="city" class="form-control"></select>
                                </div>
                                <div class="col-lg-2">
                                    <select name="user.area" id="area" class="form-control"></select>
                                </div>
                            </div>
                            <!--级联菜单城市选择-->
                            <div class="form-group">
                                <label class="col-lg-3 control-label">手机号</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" name="phoneNumber" placeholder="手机号" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">邮箱</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" name="email" placeholder="邮箱" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">个人描述</label>
                                <div class="col-lg-6">
                                    <textarea rows="5" class="form-control"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2 col-lg-offset-4">
                                    <button type="submit" class="btn btn-success " name="signup" value="Sign up">&nbsp;&nbsp;确定&nbsp;&nbsp;</button>
                                </div>
                                <div class="col-lg-6">
                                    <button type="reset" class="btn btn-warning" name="reset" value="重置">&nbsp;&nbsp;重置&nbsp;&nbsp;</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="z_content">
                    <!--修改密码-->
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class='embed-responsive-item' src="/Admin/StudentChangePassword" width="100%" height="100%" style="min-height:1200px" allowtransparency="true" allowfullscreen="true" allowfullscreenInteractive="true" border="0" frameborder="0"></iframe>
                    </div>
                </div>
                <div class="z_content">
                    <!--修改学生信息-->
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class='embed-responsive-item' src="/Admin/AdminOperateStudent" width="100%" height="100%" style="min-height:1200px" allowtransparency="true" allowfullscreen="true" allowfullscreenInteractive="true" border="0" frameborder="0"></iframe>
                    </div>
                </div>
                <div class="z_content">
                    添加学生信息
                </div>
                <div class="z_content">
                    修改教师信息
                </div>
                <div class="z_content">
                    添加教师信息
                </div>
                <div class="z_content">
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class='embed-responsive-item' src='/Admin/AlterCourseInfo' width="100%" height="100%" style="min-height:1200px" allowtransparency="true" allowfullscreen="true" allowfullscreenInteractive="true" border="0" frameborder="0"></iframe>
                    </div>
                </div>
                <div class="z_content">
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class='embed-responsive-item' src='/Admin/AddCourseInfo' width="100%" height="100%" style="min-height:1200px" allowtransparency="true" allowfullscreen="true" allowfullscreenInteractive="true" border="0" frameborder="0"></iframe>
                    </div>
                </div>
                <div class="z_content">学籍信息异动</div>
                <div class="z_content">其他</div>
            </div>

        </div>

        <div class="layui-footer">
            <!-- 底部固定区域 -->
            <center>湖北大学教务管理系统</center>
        </div>
    </div>
